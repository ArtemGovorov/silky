{
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "*.json",
        "packages/__@(tests|mocks)__/**"
      ]
    }
  },
  "version": "independent",
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"]
}
